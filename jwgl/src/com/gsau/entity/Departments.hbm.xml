<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.gsau.entity.Departments" table="departments">
		<id name="dept_id" column="dept_id" type="string" length="10">
		   <generator class="assigned"></generator>
		</id>
		<property name="dept_name" column="dept_name" type="string"  length="30" not-null="true"/>
		<property name="dept_dean" column="dept_dean" type="string" length="30"/>
	</class>
</hibernate-mapping>